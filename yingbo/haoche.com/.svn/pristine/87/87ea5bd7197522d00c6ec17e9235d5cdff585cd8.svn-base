

<script type="text/javascript" src='{$Think.const.JS_URL}jquery-2.1.3.min.js'></script>
<script type="text/javascript" src='{$Think.const.JS_URL}uploadPreview.js'></script>



<div class="main-content">
    <div class="box-title margin_bot_20">
        <div class="span10">
            <h3><i class="icon-magic"></i>慈善项目编辑</h3>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="page-content box">
                <form action="__SELF__" method="post" enctype='multipart/form-data' class="form-horizontal">
                    <input type='hidden' name='cishan_id' value='{$info.cishan_id}' />
                    <div class="form-group">
                        <label class="control-label">项目名称 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-large" name="cishan_name" value="{$info.cishan_name}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">项目地址 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-large" name="address" value="{$info.address}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">是否展示 : </label>
                        <div class="controls pull-left">
                            <label>
                                <input type="radio" class="ace" name="is_show" <if condition="$v.is_show eq 0">checked="checked"</if> value="0">
                                <span class="lbl">是</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="is_show" <if condition="$v.is_show eq 1">checked="checked"</if> value="1">
                                <span class="lbl">否</span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">是否资助 : </label>
                        <div class="controls pull-left">
                            <label>
                                <input type="radio" class="ace" name="is_zizhu" <if condition="$v.is_zizhu eq 0">checked="checked"</if> value="0">
                                <span class="lbl">是</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="is_zizhu" <if condition="$v.is_zizhu eq 1">checked="checked"</if> value="1">
                                <span class="lbl">否</span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">资助金额 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-large" name="zizhu" value="{$info.zizhu}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label"> 项目展示图 : </label>
                        <div class="controls pull-left">
                            <input type="file" class="input-large" id="logo" name="logo" >
                            <div id="pic_div"><img id='pic_img' src='{$Think.const.SITE_URL}{$info.logo|substr=###,2}'  alt='没有图片' width='100' height='100'></div>
                        </div>
                    </div>
                    <script type='text/javascript'>
                        $(function(){
                            new uploadPreview({ UpBtn: "logo", DivShow: "pic_div", ImgShow: "pic_img" });
                        });
                    </script>




                    <div class="form-group">

                        <label class="control-label">项目描述 : </label>
                        <div class="controls pull-left">
                            <textarea rows="5" cols="15" id='introduce' name='introduce' style='width:500px;height:350px;'>{$info.introduce}</textarea>
                        </div>
                    </div>


                    <div class="form-actions" align="center">
                        <button id="bsubmit" type="submit"  class="btn btn-sm btn-primary">保存</button>
                    </div>
                </form>
            </div>
        </div>
        <!--/.box-->
    </div><!-- /.page-content -->
</div><!-- /.main-content -->




