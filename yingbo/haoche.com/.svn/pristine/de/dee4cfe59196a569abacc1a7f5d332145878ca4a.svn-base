<script>
                    $(function () {

                        if (1==1)
                        {
                            var swiper = new Swiper('.group-list', {
                                pagination: '.group-pointer',
                                loop: true,
                                onInit: function (swiper) {
                                    $(".car-img-group").find(".group-list").prepend('<span class="yem">' + swiper.activeIndex + "/" + swiper.bullets.length + '</span>');
                                },
                                onSlideChangeStart: function (swiper) {
                                    var curIndex = (swiper.activeIndex + swiper.bullets.length) % swiper.bullets.length == 0 ? swiper.bullets.length : (swiper.activeIndex + swiper.bullets.length) % swiper.bullets.length;
                                    $(".car-img-group").find(".group-list").find(".yem").html(curIndex + "/" + swiper.bullets.length);

                                }
                            });
                        }
                    });

                </script>
            </div>
