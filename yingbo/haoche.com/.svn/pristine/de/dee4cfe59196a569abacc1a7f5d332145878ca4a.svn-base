<script type="text/jscript">
$(".car_wydc").click(function(){
$(".car_f_rewm").show("1000");
});
$(".car_f_acuo").click(function(){
$(".car_f_rewm").hide("1000");
});
</script>
<script type="text/javascript">
    $(function(){
        $(".car_f_an").click(function(){
            var flag = false;
            $("#bookform").submit(function(){return false;})
            $(".car_f_an").attr("disabled",true);
            if($("select[name='attrcolor']").val() == '0'){
                flag = false;
                $("#bookerror").text("请选择颜色");
                $("#bookerror").fadeIn(1000);
                setTimeout(function(){$("#bookerror").fadeOut(1500);$(".car_f_an").attr("disabled",false);},1000);
                return;
            }else{
                flag = true;
            }
            $.post("__MODULE__/Booking/booking",$("#bookform").serialize(),function(data){
                if(data.error == 1){
                    flag = false;
                    $("#bookerror").text(data.content);
                    $("#bookerror").fadeIn(1000);
                    setTimeout(function(){$("#bookerror").fadeOut(1500);$(".car_f_an").attr("disabled",false);},1000);
                    return;
                }
                if(data.error == 2){
                    flag = false;
                    $("#bookerror").text(data.content);
                    $("#bookerror").fadeIn(1000);
                    setTimeout(function(){$("#bookerror").fadeOut(1500);$(".car_f_an").attr("disabled",false);location.href="__MODULE__/User/personal";},1000);
                    return;
                }
                if(data.error == 3){
                    flag = false;
                    $("#bookerror").text(data.content);
                    $("#bookerror").fadeIn(1000);
                    setTimeout(function(){$("#bookerror").fadeOut(1500);$(".car_f_an").attr("disabled",false);},1000);
                    return;
                }
				if(data.error == 4){
                    flag = false;
                    location.href="__MODULE__/User/regfee/errormsg/recharge1";
                    return;
                }
                if(data.error == 0){
                    flag = false;
                    $("#bookerror").text(data.content);
                    $("#bookerror").fadeIn(1000);
                    setTimeout(function(){$("#bookerror").fadeOut(1500);$(".car_f_an").attr("disabled",false);location.href="__MODULE__/Booking/bookinfo";},1000);
                    return;
                }
            })
        })
    })
</script>
