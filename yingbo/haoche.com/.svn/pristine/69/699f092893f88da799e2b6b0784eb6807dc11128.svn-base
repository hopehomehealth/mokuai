   
<div class="main-content">

    <div class="page-content">
        <div class="row">
            <div class="page-content box">
                <div class="box-title margin_bot_20">
                    <div class="span10">
                        <h3><i class="icon-magic"></i>类型管理</h3>
                    </div>
                </div>

                <form class="form-horizontal"  action="__SELF__" method="post">
                    <div class="form-group">
                        <label class="control-label" style="width:80px;">名称 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-medium" name="search">
                            <button type="submit" class="btn btn-sm btn-primary">搜索</button>
                        </div>
                        <div class="margin_bot_20" align="right">
                            <a href="{:U('Gotype/tianjia')}" class="btn btn-primary btn-sm"><i class="icon-plus"></i>类型添加</a>

                        </div>
                    </div>
                </form>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr><th width="5px"><div align="center">id</div></th>
                        <th width="35px"><div align="center">名称</div></th>
                        <!--<th width="20px"><div align="center">属性数量</div></th>-->
                        <th width="100px"><div align="center">添加时间</div></th>
                        <th width="100px"><div align="center">修改时间</div></th>
                        <th width="60px"><div align="center">操作</div></th>
                    </tr></thead>
                    <tbody>
                    <foreach name="info" key="k" item="v">
                        <tr>
                            <td><div align="center">{$v.type_id}</div></td>
                            <td><div align="center">{$v.type_name}</div></td>
                            <!--<td><div align="center">{$v.atrr_num}</div></td>-->
                            <td><div align="center">{$v.add_time|date='Y-m-d H:i:s',###}</div></td>
                            <td><div align="center">{$v.upd_time|date='Y-m-d H:i:s',###}</div></td>
                            <td> <div align="center">
                                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                    <a href="{:U('Goattribute/showlist',array('type_id'=>$v['type_id']))}" target='_self' > <i class="icon-pencil bigger-130"></i>&nbsp;属性列表 </a>
                                    <a class="green" href="{:U('upd',array('type_id'=>$v['type_id']))}"> <i class="icon-pencil bigger-130"></i>&nbsp;编辑 </a>
                                    <a class="red detail" href="{:U('del',array('type_id'=>$v['type_id']))}"> <i class="icon-trash bigger-130"></i>&nbsp;删除 </a>
                                </div>
                            </div>
                            </td>
                        </tr>
                    </foreach>
                    </tbody>
                </table>
                <div class="green-black">{$page}</div>
            </div>
        </div>
        <!--/.box-->
    </div><!-- /.page-content -->
</div><!-- /.main-content -->



