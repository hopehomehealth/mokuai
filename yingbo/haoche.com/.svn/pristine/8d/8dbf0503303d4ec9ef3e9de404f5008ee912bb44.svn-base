
<div class="main-content">
    <div class="box-title margin_bot_20">
        <div class="span10">
            <h3><i class="icon-magic"></i>管理员修改</h3>
        </div>
    </div>


    <div class="page-content">
        <div class="row">
            <div class="page-content box">

                <form action="__SELF__" method="post" class="form-horizontal" enctype="multipart/form-data">
                    <input type="hidden" name="mg_id" value="{$info.mg_id}">
                    <div class="form-group">
                        <label class="control-label">名　　称 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-large" name="mg_name" value="{$info.mg_name}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">密码 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-large" name="mg_pwd" value="{$info.mg_pwd}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="control-label">手机号 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-large" name="iphone" value="{$info.iphone}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>

                    <div class="form-group" id="brand-tab-show">
                        <label class="control-label">角色 : </label>
                        <div class="controls pull-left">
                            <select class="input-medium" name='role_id'>
                                <option value='0'>-请选择-</option>
                                <foreach name='roleinfo' item='v'>
                                    <option value='{$v.role_id}' <eq name='info.role_id' value='$v.role_id'>selected='selected'</eq>>{$v.role_name}</option>
                                </foreach>
                            </select>
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>

                    <div class="form-actions" align="center">
                        <button id="bsubmit" type="submit"  class="btn btn-sm btn-primary">保存</button>
                    </div>
                </form>
            </div>
        </div>
        <!--/.box-->
    </div><!-- /.page-content -->
</div><!-- /.main-content -->

    


