<script type="text/javascript">
    $(function(){
        var isclick = false;
        $("#sellercenter").click(function(){
            var url = $(this).attr('href');
            if(!isclick){
                isclick = true;
                $.get('__MODULE__/Core/checkvip',function(data){
                    if(data == 'nologin'){
                        location.href = '__MODULE__/User/login';
                    }else if(data == 'error'){
                        $("section").append("<div id='errormsg' style='display:none;position:fixed;left:50%;top:50%;z-index:9999;width:12rem;height:3rem;margin-left:-6rem;margin-top:-4.5rem;text-align:center;line-height:3rem;color:white;font-weight:bold;font-size:1.5rem;opacity:0.7;background:#666'>"+'请先购买会员'+"</div>");

                        $("#errormsg").fadeIn(1000);$("#errormsg").fadeOut(2000);setTimeout(function(){$("#errormsg").remove();isclick = false;},3000);
                    }else{
                        location.href = url;
                    }
                })
            }
            
            return false;
        })
    })
</script>