
<div class="main-content">

    <div class="page-content">
        <div class="row">
            <div class="page-content box">
                <div class="box-title margin_bot_20">
                    <div class="span10">
                        <h3><i class="icon-magic"></i>慈善项目列表</h3>
                    </div>
                </div>

                <form class="form-horizontal"  action="__SELF__" method="post">
                    <div class="form-group">
                        <label class="control-label">名称 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-medium" name="search">
                            <button type="submit" class="btn btn-sm btn-primary">搜索</button>
                        </div>

                    </div>
                </form>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                    <tr><th width="2px"><div align="center">id</div></th>
                        <th width="25px"><div align="center">项目名称</div></th>
                        <th width="25px"><div align="center">项目logo</div></th>
                        <th width="65px"><div align="center">项目地址</div></th>
                        <th width="30px"><div align="center">申请人</div></th>
                        <th width="30px"><div align="center">联系方式</div></th>
                        <th width="20px"><div align="center">是否显示</div></th>
                        <th width="20px"><div align="center">是否资助</div></th>
                        <th width="20px"><div align="center">资助金额</div></th>
                        <th width="40px"><div align="center">申请时间</div></th>
                        <th width="45px"><div align="center">操作</div></th>
                    </tr></thead>
                    <tbody>

                    <foreach name="info" key="k" item="v">
                        <tr>
                            <td><div align="center">{$v.cishan_id}</div></td>
                            <td><div align="center">{$v.cishan_name}</div></td>
                            <td><div align="center"><img src="{$Think.const.SITE_URL}{$v.logo}"  width='50' height='50'/></div></td>
                            <td><div align="center">{$v.address}</div></td>
                            <td><div align="center">{$v.username}</div></td>
                            <td><div align="center">{$v.userphone}</div></td>
                            <if condition="$v.is_show eq 0">
                                <td><div align="center"><i class="icon-ok bigger-130 green"></i></div> </td>
                                <else />
                                <td><div align="center"><i class="icon-remove bigger-130 red"></i></div> </td>
                            </if>
                            <if condition="$v.is_zizhu eq 0">
                                <td><div align="center"><i class="icon-ok bigger-130 green"></i></div> </td>
                                <else />
                                <td><div align="center"><i class="icon-remove bigger-130 red"></i></div> </td>
                            </if>
                            <td><div align="center">{$v.zizhu}</div></td>
                            <td><div align="center">{$v.add_time|date='Y-m-d H:i:s',###}</div></td>
                            <td> <div align="center">
                                <div class="visible-md visible-lg hidden-sm hidden-xs action-buttons">
                                    <!--<a href="customize_menus_add.html"> <i class="icon-pencil bigger-130"></i>&nbsp;添加 </a>-->
                                    <a class="green" href="{:U('xmupd',array('cishan_id'=>$v['cishan_id']))}"> <i class="icon-pencil bigger-130"></i>&nbsp;编辑 </a>
                                    <a class="red detail" href="{:U('xmdel',array('cishan_id'=>$v['cishan_id']))}"> <i class="icon-trash bigger-130"></i>&nbsp;删除 </a>
                                </div>
                            </div>
                            </td>
                        </tr>
                    </foreach>
                    </tbody>
                </table>
            <div class="green-black">{$page}</div>
            </div>
        </div>
        <!--/.box-->
    </div><!-- /.page-content -->
</div><!-- /.main-content -->


  