
 
<div class="main-content">
    <div class="box-title margin_bot_20">
        <div class="span10">
            <h3><i class="icon-magic"></i>房天下申请修改</h3>
        </div>
    </div>

    <div class="page-content">
        <div class="row">
            <div class="page-content box">
                <form action="__SELF__" method="post" enctype='multipart/form-data' class="form-horizontal">
                    <input type='hidden' name='house_id' value='{$info.house_id}' />
                    <div class="form-group">
                        <label class="control-label">姓名 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-small" name="name" value="{$userinfo[0]['name']}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">手机 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-middle" name="phone" value="{$userinfo[0]['phone']}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>
                    <!--<div class="form-group">-->
                        <!--<label class="control-label">邮箱 : </label>-->
                        <!--<div class="controls pull-left">-->
