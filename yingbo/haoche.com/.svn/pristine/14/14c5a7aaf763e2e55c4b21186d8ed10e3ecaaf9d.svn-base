                        <!--</div>-->
                    <!--</div>-->
                    <div class="form-group">
                        <label class="control-label">意向区域 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-large" name="address" value="{$info.address}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">意向楼盘 : </label>
                        <div class="controls pull-left">
                            <input type="text" class="input-large" name="building" value="{$info.building}">
                            <span class="help-inline red"> * </span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label">意向户型 : </label>
                        <div class="controls pull-left">
                            <label>
                                <!--<eq name='info.type_id' value='$v.type_id'>selected='selected'</eq>-->
                                <input type="radio" class="ace" name="type" value="0" <eq name='info.type' value="0">checked="checked"</eq>>
                                <span class="lbl">不限</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="type" value="1"<eq name='info.type' value="1">checked="checked"</eq>>
                                <span class="lbl">一居</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="type" value="2" <eq name='info.type' value="2">checked="checked"</eq>>
                                <span class="lbl">两居</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="type" value="3" <eq name='info.type' value="3">checked="checked"</eq>>
                                <span class="lbl">三居</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="type" value="3" <eq name='info.type' value="4">checked="checked"</eq>>
                                <span class="lbl">其它</span>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">意向面积 : </label>
                        <div class="controls pull-left">
                            <label>
                                <!--<eq name='info.type_id' value='$v.type_id'>selected='selected'</eq>-->
                                <input type="radio" class="ace" name="size" value="0" <eq name='info.size' value="0">checked="checked"</eq>>
                                <span class="lbl">不限</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="size" value="1"<eq name='info.size' value="1">checked="checked"</eq>>
                                <span class="lbl">≤90平方</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="size" value="2" <eq name='info.size' value="2">checked="checked"</eq>>
                                <span class="lbl">90-120平方</span>
                            </label>
                            <label>
                                <input type="radio" class="ace" name="size" value="3" <eq name='info.size' value="3">checked="checked"</eq>>
                                <span class="lbl">其它</span>
                            </label>
                        </div>
                    </div>
