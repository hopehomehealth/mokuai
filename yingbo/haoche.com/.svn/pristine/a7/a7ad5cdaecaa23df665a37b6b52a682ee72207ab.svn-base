        <div class="main-content">
          <div class="page-content">
            <div class="row">
              <div class="page-content box">
              	<div class="box-title margin_bot_20">
                  	<div class="span10">
                   		<h3><i class="icon-cogs"></i>提现列表</h3>
                  	</div>
                </div>
                <form id="formSearch" name="formSearch" action="__SELF__" method="get" class="form-horizontal">
                  <div class="form-group">
                    <label class="control-label" style="width:80px;">会员名 : </label>
                    <div class="controls pull-left">
                      <input type="text" id="memberId" name="nikename" class="input-medium" value="{$Think.get.nikename}">
                      <select name="status" id="sAgree" class="input-medium">
                          <option value="1" <if condition="$Think.get.status eq 1">selected="selected"</if>>通过</option>
                          <option value="2" <if condition="$Think.get.status eq 2">selected="selected"</if>>未通过</option>
						  <option value="0" <if condition="$Think.get.status eq 0">selected="selected"</if>>待处理</option>
                      </select>
                      <button type="submit" id="ncsubmit" class="btn btn-sm btn-primary">搜索</button>
                    </div>
                  </div>
                </form>
                <table class="table table-striped table-bordered table-hover">
                    <thead>
                      <tr><th width="5%">会员编号</th>
                        <th width="8%">图像</th>
                        <th width="8%">昵称</th>
						<th width="5%">打款金额(元)</th>
                        <th width="5%">申请提现</th>

                        <th width="5%">可提现</th>
                        <th width="8%">开户银行</th>
                        <th width="12%">银行账号/支付宝号</th>
                        <th width="5%">户名</th>
                        <th width="8%">电话</th>
                        <th width="15%">申请/审核日期</th>
                        <th width="5%">状态</th>
                        <th width="5%">操作</th>
                      </tr></thead>
                      <tbody>
                      <foreach name="exchange" item="info">
                        <tr>
                            <td>{$firstno++}</td>
                            <td>
                                <img src="{$info.userhead}" width="50px" height="50px;">
                            </td>
                            <td>{$info.nikename}</td>
							<td style="color:black;font-size:1.2em;font-weight:bolder;font-style:italic">{$info.amount}</td>
							<td class="red">{$info.relsend}</td>

							<td class="red">{$info.allow}</td>
                            <td><if condition="$info.bankname neq ''">{$info.bankname}<else />无</if></td>
                            <td><if condition="$info.card_no neq ''">{$info.card_no}</if><if condition="$info.count_no neq ''">{$info.count_no}</if></td>
                            <td>{$info.name}</td>
                            <td>{$info.bindphone}</td>
                            <td>申请日期:<if condition="$info.inputtime neq ''">{$info.inputtime|date="Y-m-d H:i:s",###}<else /></if><br>
审核日期:<if condition="$info.checktime neq ''">{$info.checktime|date="Y-m-d H:i:s",###}<else /></if><br />处理倒计时：&nbsp;&nbsp;&nbsp;&nbsp;{$info.daojishi}</td>
                            <if condition="$info.status eq '0'">
                            <td class="action-buttons red">
								待处理
                            </td>
                            </if>
							<if condition="$info.status eq '1'">
                            <td class="action-buttons green">
                              通过
                            </td>
                            </if>
                            <if condition="$info.status eq '2'">
                            <td class="action-buttons red">
                              未通过
                            </td>
                            </if>
                            <if condition="$info.checktime eq ''">
                            <td>
                              <a href="__MODULE__/Exchange/oppass/ex_id/{$info.ex_id}" onclick="return confirm('你确定通过吗？')" class="green">通过</a><br /><a href="__MODULE__/Exchange/opfail/ex_id/{$info.ex_id}" onclick="return confirm('你确定不通过吗？')" class="green">不通过</a>
                            </td>
                            </if>
                            <if condition="$info.checktime neq ''">
                            <td>
                              已处理
                            </td>
                            </if>
                        </tr>
                      </foreach>
                      </tbody>
                 </table>
                 <div class="technorati">{$page}<div/>
              </div>
            </div>
            <!--/.box-->
          </div><!-- /.page-content -->
        </div><!-- /.main-content -->
